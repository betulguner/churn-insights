# PostgreSQL Configuration (Docker)
POSTGRES_DB=churn_analysis
POSTGRES_USER=churn_user
POSTGRES_PASSWORD=churn_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@churn.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=8080

# Local PostgreSQL (if using local instead of Docker)
LOCAL_PG_HOST=localhost
LOCAL_PG_PORT=5432
LOCAL_PG_DB=churn_analysis
LOCAL_PG_USER=your_local_user
LOCAL_PG_PASSWORD=your_local_password

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# ETL Configuration
BATCH_SIZE=5000
LOG_LEVEL=INFO
